---
layout: null
---
<?xml version="1.0"?>
<feed xmlns="http://www.w3.org/2005/Atom">

  <title>BetterRead</title>
  <description>有理、有趣、有用的英文读物推介.</description>
  <link href="/BetterRead.xml"/>
  <link type="application/atom+xml" rel="self" href="/BetterRead.xml"/>
  <updated>{{ site.time | date_to_xmlschema }}</updated>
  <id>BetterRead</id>

  {% for post in site.BetterRead %}
  <entry>
    <id>{{ post.id }}</id>
    <link type="text/html" rel="alternate" href="{{ post.url }}"/>
    <title>{{ post.title | xml_escape }}</title>
    <updated>{{ post.date | date_to_xmlschema }}</updated>
    <author>
      <name>{{ post.author | xml_escape }}</name>
    </author>
    <content type="html"><![CDATA[{{ post.content }}]]></content>
  </entry>
  {% endfor %}

</feed>
